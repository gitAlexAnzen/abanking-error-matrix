<configuration>
	<jmxConfigurator />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] %highlight(%-5level) %logger{35} -
				%replace(%msg){'&lt;password>(.*)&lt;/password>|password=(.*),','********'}%n
			</pattern>
		</encoder>
	</appender>

	<appender name="abankingErrorTraceFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<param>/tmp/abankingErrorMatrix.log</param>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>/tmp/abankingErrorMatrix.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 5 days' worth of history -->
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %highlight(%-5level) %logger{35} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="abankingErrorMatrixTransactionFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/tmp/abankingErrorMatrixTransaction.log</file>

		<encoder>
			<pattern>%date [%thread] %highlight(%-5level) %logger{35} - %msg%n
			</pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>abankingErrorMatrix.log.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 5 days' worth of history -->
			<maxHistory>5</maxHistory>
		</rollingPolicy>

	</appender>

	<appender name="ANALYTICS-FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<param name="file" value="/tmp/analytics/scotiaLeap.log" />
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>abankingErrorMatixAnalitics.log.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 5 days' worth of history -->
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date{ISO8601} [%thread] %level: %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="mx.com.anzen.app.abanking.error.matrix"
		level="all">
		<appender-ref ref="abankingErrorMatrixTransactionFile" />
	</logger>

	<logger name="analytics" level="info" additivity="false">
		<appender-ref ref="ANALYTICS-FILE" />
		<appender-ref ref="console" />
	</logger>

	<root level="info">
		<appender-ref ref="abankingErrorTraceFile" />
		<appender-ref ref="console" />
	</root>
</configuration>